generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Swipe {
  id        String   @id @default(cuid())
  swiperId  String // Talent Protocol User ID
  swipedId  String // Talent Protocol User ID
  isLike    Boolean // true for right swipe, false for left swipe
  createdAt DateTime @default(now())

  @@unique([swiperId, swipedId])
}

model Match {
  id        String    @id @default(cuid())
  user1Id   String // Talent Protocol User ID
  user2Id   String // Talent Protocol User ID
  createdAt DateTime  @default(now())
  messages  Message[]

  @@unique([user1Id, user2Id])
}

model Message {
  id        String   @id @default(cuid())
  match     Match    @relation(fields: [matchId], references: [id])
  matchId   String
  senderId  String // Talent Protocol User ID
  content   String
  createdAt DateTime @default(now())
}
